<h1>Update your <%= @venue.venue_name() %> venue </h1>

<form action="/venues/<%= @venue.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename your venue</label>
  <input id="venue_name" name="venue_name" type="text">

  <button type="submit">Update</button>
</form>

<form action="/venues/<%= @venue.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Remove Venue</button>
</form>
